# Configuração do Banco de Dados
DB_HOST=localhost
DB_USER=root
DB_NAME=gap_db
DB_PASS=
DB_PORT=3306

# Segurança (JWT)
JWT_SECRET=sua_chave_secreta_jwt
JWT_REFRESH_SECRET=sua_chave_secreta_refresh_jwt

# Configuração de Email (SMTP)
