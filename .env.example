EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
EMAIL_SECURE=false
EMAIL_FROM=no-reply@sistemasgap.com

# URL do Frontend (CORS)
ALLOWED_ORIGINS=http://localhost:3000

# Ambiente
NODE_ENV=development
PORT=3000
